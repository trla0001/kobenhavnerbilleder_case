---
const { variant = "primary", size = "large" } = Astro.props;

const buttonStyling = "transition duration-200";

const variantClasses = {
  primary: "bg-sky-900 text-neutral-50 animation",
  secondary: "border-2 border-sky-900 text-sky-900",
};

const sizeClasses = {
  large: "py-2 px-12 rounded-3xl",
  medium: "py-2 px-5",
  small: "p-3",
};
---

<div>
  <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>

<style>
  .animation:hover {
    animation: pulse;
    animation-duration: 1s;
  }
</style>
